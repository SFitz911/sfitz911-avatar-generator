# SFitz911 Avatar Generator - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# LongCat Avatar Configuration
# ============================================
MODEL_PATH=/app/models/longcat
OUTPUT_PATH=/app/outputs
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=/app/models/torch

# Model settings
BATCH_SIZE=1
MAX_VIDEO_LENGTH=60
VIDEO_FPS=30
VIDEO_RESOLUTION=720p

# ============================================
# n8n Configuration
# ============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme_secure_password
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://your-instance-ip:5678/

# ============================================
# Cloud Storage (AWS S3)
# ============================================
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Alternative: Google Cloud Storage
# GCS_BUCKET=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# Text-to-Speech Configuration
# ============================================
TTS_PROVIDER=elevenlabs
# Options: elevenlabs, azure, google, aws, coqui

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=default

# Azure Speech (alternative)
# AZURE_SPEECH_KEY=your_azure_key
# AZURE_SPEECH_REGION=eastus

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_TIMEOUT=600

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Docker Hub Configuration
# ============================================
DOCKER_USERNAME=your_dockerhub_username
DOCKER_IMAGE_TAG=latest

# ============================================
# Vast.ai Configuration
# ============================================
VAST_API_KEY=your_vast_api_key_here

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# ============================================
# Security
# ============================================
SECRET_KEY=generate_a_random_secret_key_here
ALLOWED_HOSTS=*
CORS_ORIGINS=*
