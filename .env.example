# ============================================
# SFitz911 Avatar Generator - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# LongCat Avatar Configuration
# ============================================
MODEL_PATH=/app/models/longcat
OUTPUT_PATH=/app/outputs
CUDA_VISIBLE_DEVICES=0

# Model precision (bf16 recommended for A100/H100)
MODEL_PRECISION=bf16

# Generation settings
DEFAULT_FPS=30
DEFAULT_RESOLUTION=720p
MAX_VIDEO_LENGTH=300

# ============================================
# n8n Configuration
# ============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-secure-password

# n8n webhook URL (update with your instance IP)
WEBHOOK_URL=http://your-instance-ip:5678/
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# n8n encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=

# Timezone
GENERIC_TIMEZONE=America/New_York

# ============================================
# Docker Hub Configuration
# ============================================
DOCKER_HUB_USERNAME=yourdockerhub
DOCKER_IMAGE_TAG=latest

# ============================================
# Cloud Storage (AWS S3)
# ============================================
# For storing model weights and outputs
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: S3 paths
S3_MODEL_PATH=models/longcat/
S3_OUTPUT_PATH=outputs/

# ============================================
# Cloud Storage (Google Cloud Storage) - Alternative
# ============================================
# Uncomment if using GCS instead of S3
# GCS_BUCKET=your-gcs-bucket
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# API rate limiting
API_RATE_LIMIT=10
API_RATE_LIMIT_PERIOD=60

# ============================================
# TTS Configuration
# ============================================
# TTS Engine (options: elevenlabs, azure, google, aws)
TTS_ENGINE=elevenlabs

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=default

# Azure TTS (if using Azure)
AZURE_TTS_KEY=
AZURE_TTS_REGION=

# Google TTS (if using Google)
GOOGLE_TTS_API_KEY=

# AWS Polly (if using AWS)
AWS_POLLY_ACCESS_KEY=
AWS_POLLY_SECRET_KEY=

# ============================================
# Vast.ai Configuration
# ============================================
VAST_API_KEY=your-vast-api-key

# Instance preferences
VAST_GPU_TYPE=A100
VAST_MIN_VRAM=60
VAST_MIN_RAM=64

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Sentry for error tracking
SENTRY_DSN=

# Optional: Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# ============================================
# Development Settings
# ============================================
DEBUG=false
ENVIRONMENT=production

# Hot reload for development
RELOAD=false

# ============================================
# Security
# ============================================
# API Key for securing endpoints (generate with: openssl rand -hex 32)
API_SECRET_KEY=

# CORS settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Performance Tuning
# ============================================
# Batch processing
MAX_BATCH_SIZE=1
QUEUE_MAX_SIZE=10

# Timeout settings (seconds)
GENERATION_TIMEOUT=600
API_TIMEOUT=30

# Memory management
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
